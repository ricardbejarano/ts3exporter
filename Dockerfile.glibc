FROM golang:1 AS build

ARG VERSION="0.0.7"
ARG CHECKSUM="53cc05b1dc43b036f6c4a636bfae2482d3769753033886c36537bccd86b563ad"

ADD https://github.com/hikhvar/ts3exporter/archive/v$VERSION.tar.gz /tmp/ts3exporter.tar.gz

RUN [ "$CHECKSUM" = "$(sha256sum /tmp/ts3exporter.tar.gz | awk '{print $1}')" ] && \
    tar -C /tmp -xf /tmp/ts3exporter.tar.gz && \
    cd /tmp/ts3exporter-$VERSION && \
      CGO_ENABLED=0 go build

RUN mkdir -p /rootfs/etc && \
    cp /tmp/ts3exporter-$VERSION/ts3exporter /rootfs/ && \
    echo "nogroup:*:100:nobody" > /rootfs/etc/group && \
    echo "nobody:*:100:100:::" > /rootfs/etc/passwd


FROM scratch

COPY --from=build --chown=100:100 /rootfs /

USER 100:100
EXPOSE 9189/tcp
ENTRYPOINT ["/ts3exporter"]
